<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Outer phone body (silver-gray frame) -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/Phone_Diagram1"/>
            <corners android:radius="26dp"/>
            <stroke android:width="2dp" android:color="@color/Phone_Diagram2"/>
        </shape>
    </item>

    <!-- Inner screen area -->
    <item
        android:left="10dp"
        android:top="14dp"
        android:right="10dp"
        android:bottom="14dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/Phone_Diagram3"/>
            <corners android:radius="18dp"/>
        </shape>
    </item>

    <!-- Small front camera notch (TOP CENTER) -->
    <item
        android:gravity="top|center_horizontal"
        android:top="2dp">
        <shape android:shape="oval">
            <size android:width="60dp" android:height="16dp"/>
            <solid android:color="@color/Phone_Diagram4"/>
        </shape>
    </item>

</layer-list>
