<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto">


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        card_view:cardCornerRadius="16dp"
        card_view:cardBackgroundColor="?attr/cards"
        card_view:cardElevation="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="12dp"
            android:gravity="center_vertical">

            <!-- App Icon -->
            <ImageView
                android:id="@+id/appIcon"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginEnd="12dp"
                android:contentDescription="App Icon" />

            <!-- App Details -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <!-- App Name -->
                <TextView
                    android:id="@+id/appName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="App Name"
                    android:textColor="@color/Dashboard_text"
                    android:textSize="?attr/textSizeTitle"
                    android:textStyle="bold" />

                <!-- App Version -->
                <TextView
                    android:id="@+id/appVersion"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Version: 1.0.0"
                    android:textColor="@color/Dashboard_text"
                    android:textSize="?attr/textSizeDetails"
                    android:layout_marginTop="2dp" />

                <!-- Storage Used -->
                <TextView
                    android:id="@+id/appSize"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Storage Used: 256 MB"
                    android:textColor="@color/details"
                    android:textSize="?attr/textSizeDetails"
                    android:layout_marginTop="2dp" />
            </LinearLayout>
        </LinearLayout>

    </androidx.cardview.widget.CardView>
</layout>
