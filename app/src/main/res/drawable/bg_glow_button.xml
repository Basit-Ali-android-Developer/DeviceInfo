<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/AppStorage1" />
            <corners android:radius="12dp" />
            <stroke android:width="2dp" android:color="@color/AppStorage2" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:startColor="@color/AppStorage3"
                android:endColor="@color/AppStorage4"


                android:angle="90" />
            <corners android:radius="12dp" />
            <stroke android:width="1dp" android:color="@color/AppStorage5" />
            <padding android:top="6dp" android:bottom="6dp" android:left="12dp" android:right="12dp" />
        </shape>
    </item>
</selector>
