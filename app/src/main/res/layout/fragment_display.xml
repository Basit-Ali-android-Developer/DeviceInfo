    <ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
    >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:cardBackgroundColor="?attr/background"
            android:padding="16dp">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                app:cardCornerRadius="18dp"
                app:cardElevation="5dp"
                app:cardBackgroundColor="?attr/cards">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <!-- Title -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/Display_c1_h1"
                        android:textSize="?attr/textSizeHeadings"
                        android:textStyle="bold"
                        android:textColor="@color/Heading_blue"
                        android:layout_marginBottom="16dp" />

                    <!-- Phone Diagram -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center">

                            <!-- Phone Body -->
                            <LinearLayout
                                android:orientation="vertical"
                                android:id="@+id/phoneDiagram"
                                android:layout_width="160dp"
                                android:layout_height="240dp"
                                android:layout_gravity="center"
                                android:background="@drawable/phone_outline" />

                            <!-- Height Label (Right Side, Outside the Phone) -->
                            <TextView
                                android:id="@+id/textHeightInches"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0 in"
                                android:textSize="?attr/textSizeDetails"
                                android:textColor="@color/Phone_sizes"
                                android:layout_gravity="center"
                                android:layout_marginEnd="-40dp"
                                android:paddingStart="4dp"
                                android:paddingEnd="4dp" />
                        </LinearLayout>

                        <!-- Width Label (Below Phone, Outside) -->
                        <TextView
                            android:id="@+id/textWidthInches"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0 in"
                            android:textSize="?attr/textSizeDetails"
                            android:textColor="@color/Phone_sizes"
                            android:layout_marginTop="6dp"
                            android:gravity="center" />
                    </LinearLayout>




                    <!-- Divider -->
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#2C2C2C"
                        android:layout_marginTop="14dp"
                        android:layout_marginBottom="10dp" />


                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:layout_marginHorizontal="20dp"
                        app:cardCornerRadius="18dp"
                        app:cardElevation="4dp"
                        android:padding="16dp"
                        app:cardBackgroundColor="?attr/cards">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <!-- Screen Size -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:orientation="horizontal"
                            android:layout_marginBottom="8dp">

                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:src="@drawable/phone_android"
                                app:tint="#BB86FC"
                                android:layout_marginEnd="10dp"/>

                            <TextView
                                android:id="@+id/textScreenSize"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Screen Size: 0 in"
                                android:textColor="@color/Dashboard_text"
                                android:textSize="?attr/textSizeTitle"
                                android:fontFamily="sans-serif-medium"/>
                        </LinearLayout>

                        <!-- Resolution -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:orientation="horizontal"
                            android:layout_marginBottom="8dp">

                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:src="@drawable/resolution"
                                app:tint="@color/neon_green"
                                android:layout_marginEnd="10dp"/>

                            <TextView
                                android:id="@+id/textResolution"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Resolution: 0 Ã— 0 px"
                                android:textColor="@color/Dashboard_text"
                                android:textSize="?attr/textSizeTitle"
                                android:fontFamily="sans-serif-medium"/>
                        </LinearLayout>

                        <!-- Density -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:orientation="horizontal"
                            android:layout_marginBottom="8dp">

                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:src="@drawable/gear_small"
                                app:tint="#FFB74D"
                                android:layout_marginEnd="10dp"/>

                            <TextView
                                android:id="@+id/textDensity"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Density: 0 dpi"
                                android:textColor="@color/Dashboard_text"
                                android:textSize="?attr/textSizeTitle"
                                android:fontFamily="sans-serif-medium"/>
                        </LinearLayout>

                        <!-- Refresh Rate -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:src="@drawable/refresh"
                                app:tint="#8BC34A"
                                android:layout_marginEnd="10dp"/>

                            <TextView
                                android:id="@+id/textRefreshRate"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Refresh Rate: 0 Hz"
                                android:textColor="@color/Dashboard_text"
                                android:textSize="?attr/textSizeTitle"
                                android:fontFamily="sans-serif-medium"/>
                        </LinearLayout>
                    </LinearLayout>
                    </androidx.cardview.widget.CardView>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cardDeviceInfo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="20dp"
                app:cardElevation="8dp"
                app:cardBackgroundColor="?attr/cards"
                android:layout_marginBottom="12dp">



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <!-- Title -->
                    <TextView
                        android:id="@+id/text_display_environment_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/Display_c3_t1"
                        android:textStyle="bold"
                        android:textSize="?attr/textSizeHeadings"
                        android:textColor="@color/Heading_blue"
                        android:drawablePadding="8dp"
                        android:layout_marginBottom="15dp"/>


                    <!-- Brightness -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <TextView
                            android:text="@string/Display_c3_t2"
                            android:textSize="?attr/textSizeTitle"
                            android:textColor="@color/Dashboard_text"
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content" />

                        <ProgressBar
                            android:id="@+id/textProgressBrightness"
                            style="?android:attr/progressBarStyleHorizontal"
                            android:layout_width="160dp"
                            android:layout_height="10dp"
                            android:progress="50"
                            android:max="100"
                            android:progressDrawable="@drawable/progress_brightness_style"
                            android:layout_marginStart="8dp" />
                    </LinearLayout>

                    <!-- Timeout -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="8dp">

                        <TextView
                            android:text="@string/Display_c3_t3"
                            android:textSize="?attr/textSizeTitle"
                            android:textColor="@color/Dashboard_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                        <TextView
                            android:id="@+id/textTimeout"
                            android:layout_marginStart="6dp"
                            android:text="0 sec"
                            android:textColor="@color/Dashboard_text"
                            android:textSize="?attr/textSizeTitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                    </LinearLayout>

                    <!-- Orientation -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="6dp">

                        <TextView
                            android:text="@string/Display_c3_t4"
                            android:textSize="?attr/textSizeTitle"
                            android:textColor="@color/Dashboard_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                        <TextView
                            android:id="@+id/textOrientation"
                            android:layout_marginStart="6dp"
                            android:text="Portrait"
                            android:textColor="@color/Dashboard_text"
                            android:textSize="?attr/textSizeTitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                    </LinearLayout>

                    <!-- Dark Mode -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="6dp"
                        android:layout_marginBottom="4dp">

                        <TextView
                            android:text="@string/Display_c3_t5"
                            android:textSize="?attr/textSizeTitle"
                            android:textColor="@color/Dashboard_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                        <TextView
                            android:id="@+id/textDarkMode"
                            android:layout_marginStart="6dp"
                            android:text="On"
                            android:textColor="@color/Dashboard_text"
                            android:textSize="?attr/textSizeTitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                    </LinearLayout>

                </LinearLayout>
            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                app:cardCornerRadius="18dp"
                app:cardElevation="5dp"
                app:cardBackgroundColor="?attr/cards">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <!-- Title -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/Display_c4_h1"
                        android:textSize="?attr/textSizeHeadings"
                        android:textStyle="bold"
                        android:textColor="@color/Heading_blue"
                        android:layout_marginBottom="15dp"/>




                    <!-- Grid -->
                    <GridLayout
                        android:id="@+id/gridDisplayDetails"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:columnCount="2"
                        android:alignmentMode="alignMargins"
                        android:useDefaultMargins="true"
                        android:rowCount="3">

                        <!-- Each Item -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_columnWeight="1"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:padding="4dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="ðŸ–¥ï¸"
                                android:textSize="18sp"
                                android:paddingEnd="6dp"/>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/Display_c4_t1"
                                    android:textColor="@color/Dashboard_text"
                                    android:textSize="?attr/textSizeTitle"/>

                                <TextView
                                    android:id="@+id/textTypeValue"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="unknown"
                                    android:textColor="@color/Phone_Details"
                                    android:textSize="?attr/textSizeDetails"
                                    android:textStyle="bold" />
                            </LinearLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_columnWeight="1"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:padding="4dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="ðŸŒˆ"
                                android:textSize="18sp"
                                android:paddingEnd="6dp"/>

                            <LinearLayout
                                android:orientation="vertical"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/Display_c4_t2"
                                    android:textColor="@color/Dashboard_text"
                                    android:textSize="?attr/textSizeTitle"/>

                                <TextView
                                    android:id="@+id/textColorDepthValue"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="0-bit"
                                    android:textColor="@color/Phone_Details"
                                    android:textStyle="bold"
                                    android:textSize="?attr/textSizeDetails"/>
                            </LinearLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_columnWeight="1"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:padding="4dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="ðŸ“º"
                                android:textSize="18sp"
                                android:paddingEnd="6dp"/>

                            <LinearLayout
                                android:orientation="vertical"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/Display_c4_t3"
                                    android:textColor="@color/Dashboard_text"
                                    android:textSize="?attr/textSizeTitle"/>

                                <TextView
                                    android:id="@+id/textAspectRatioValue"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="0:0"
                                    android:textColor="@color/Phone_Details"
                                    android:textStyle="bold"
                                    android:textSize="?attr/textSizeDetails"/>
                            </LinearLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_columnWeight="1"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:padding="4dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="ðŸ’¡"
                                android:textSize="18sp"
                                android:paddingEnd="6dp"/>

                            <LinearLayout
                                android:orientation="vertical"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/Display_c4_t4"
                                    android:textColor="@color/Dashboard_text"
                                    android:textSize="?attr/textSizeTitle"/>

                                <TextView
                                    android:id="@+id/textPeakBrightnessValue"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="0 nits"
                                    android:textColor="@color/Phone_Details"
                                    android:textStyle="bold"
                                    android:textSize="?attr/textSizeDetails"/>
                            </LinearLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_columnWeight="1"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:padding="4dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="ðŸ”¸"
                                android:textSize="18sp"
                                android:paddingEnd="6dp"/>

                            <LinearLayout
                                android:orientation="vertical"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/Display_c4_t5"
                                    android:textColor="@color/Dashboard_text"
                                    android:textSize="?attr/textSizeTitle"/>

                                <TextView
                                    android:id="@+id/textPixelRatioValue"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="0.0"
                                    android:textColor="@color/Phone_Details"
                                    android:textStyle="bold"
                                    android:textSize="?attr/textSizeDetails"/>
                            </LinearLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_columnWeight="1"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:padding="4dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="ðŸ•³ï¸"
                                android:textSize="18sp"
                                android:paddingEnd="6dp"/>

                            <LinearLayout
                                android:orientation="vertical"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/Display_c4_t6"
                                    android:textColor="@color/Dashboard_text"
                                    android:textSize="?attr/textSizeTitle"/>

                                <TextView
                                    android:id="@+id/textDisplayCutoutValue"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Present"
                                    android:textColor="@color/Phone_Details"
                                    android:textStyle="bold"
                                    android:textSize="?attr/textSizeDetails"/>
                            </LinearLayout>
                        </LinearLayout>

                    </GridLayout>

                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </ScrollView>
