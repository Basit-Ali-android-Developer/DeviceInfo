<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="?attr/appBackground"
        android:dividerPadding="8dp">

        <androidx.cardview.widget.CardView
            android:id="@+id/cardDeviceInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="20dp"
            app:cardElevation="8dp"
            app:cardBackgroundColor="?attr/cards"
            android:layout_marginBottom="12dp">
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp"
                android:gravity="center_vertical">

                <!-- Network Icon -->
                <ImageView
                    android:id="@+id/imgNetworkIcon"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/wifi"
                    app:tint="@color/Heading_blue"
                    android:contentDescription="Network Icon" />

                <!-- Info Container -->
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingStart="16dp">

                    <!-- Connection Name / Operator -->
                    <TextView
                        android:id="@+id/tvConnectionName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Wi-Fi / Mobile"
                        android:textSize="?attr/textSizeTitle"
                        android:textStyle="bold"
                        android:textColor="@color/Dashboard_text" />

                    <!-- Network Type -->
                    <TextView
                        android:id="@+id/tvNetworkType"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="4G / 5G / Wi-Fi"
                        android:textSize="?attr/textSizeDetails"
                        android:textColor="@color/Dashboard_text"
                        android:layout_marginTop="2dp"/>

                    <!-- Signal Strength -->
                    <!-- Network Speeds -->
                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp">

                        <TextView
                            android:id="@+id/tvDownloadSpeed"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="⬇ 0 Kbps"
                            android:textSize="?attr/textSizeDetails"
                            android:textColor="@color/Dashboard_text"
                            android:layout_marginEnd="12dp"/>

                        <TextView
                            android:id="@+id/tvUploadSpeed"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="⬆ 0 Kbps"
                            android:textSize="?attr/textSizeDetails"
                            android:textColor="@color/Dashboard_text"/>
                    </LinearLayout>

                </LinearLayout>

                <!-- Optional Refresh Button -->
                <ImageButton
                    android:id="@+id/btnRefreshNetwork"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:src="@drawable/refresh"
                    app:tint="@color/Dashboard_text"
                    android:contentDescription="Refresh Network"/>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
                android:id="@+id/cardSim1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="16dp"
                app:cardElevation="6dp"
                android:layout_marginBottom="12dp"
                android:background="?attr/appBackground">


                <LinearLayout
                    android:id="@+id/simParentLayout"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp"
                    android:background="?attr/appBackground">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/Network_sim_h1"
                        android:textSize="?attr/textSizeHeadings"
                        android:textStyle="bold"
                        android:textColor="@color/Heading_blue"
                        android:layout_marginBottom="12dp"/>

                <LinearLayout
                    android:id="@+id/simOneLayout"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp"
                    android:background="?attr/cards">

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical">

                        <ImageView
                            android:id="@+id/imgSim1"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:src="@drawable/sim1" />

                        <TextView
                            android:id="@+id/tvSim1Name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="SIM 1 — Jazz (Active)"
                            android:textColor="@color/Dashboard_text"
                            android:textStyle="bold"
                            android:textSize="?attr/textSizeTitle"
                            android:layout_marginStart="12dp" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/tvSim1Network"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Network: 4G LTE"
                        android:textColor="@color/details"
                        android:textSize="?attr/textSizeDetails"
                        android:layout_marginTop="6dp"
                        android:layout_marginStart="52dp"/>

                    <TextView
                        android:id="@+id/tvSim1Roaming"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Roaming: Off"
                        android:textColor="@color/details"
                        android:textSize="?attr/textSizeDetails"
                        android:layout_marginTop="2dp"
                        android:layout_marginStart="52dp"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/simTwoLayout"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp"
                    android:background="?attr/cards">

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical">

                        <ImageView
                            android:id="@+id/imgSim2"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:src="@drawable/sim2" />

                        <TextView
                            android:id="@+id/tvSim2Name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="SIM 2 — Zong (Idle)"
                            android:textColor="@color/Dashboard_text"
                            android:textStyle="bold"
                            android:textSize="?attr/textSizeTitle"
                            android:layout_marginStart="12dp" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/tvSim2Network"
                        android:layout_width="wrap_content"
                        android:layout_height="29dp"
                        android:layout_marginStart="52dp"
                        android:layout_marginTop="6dp"
                        android:text="Network: None"
                        android:textColor="@color/details"
                        android:textSize="?attr/textSizeDetails" />

                    <TextView
                        android:id="@+id/tvSim2Roaming"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Roaming: Off"
                        android:textColor="@color/details"
                        android:textSize="?attr/textSizeDetails"
                        android:layout_marginTop="2dp"
                        android:layout_marginStart="52dp"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/noSimLayout"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:padding="20dp"
                    android:background="?attr/cards">

                    <ImageView
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:src="@drawable/no_sim"
                        android:layout_marginBottom="12dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/Network_sim_message1"
                        android:textColor="@color/Dashboard_text"
                        android:textSize="?attr/textSizeTitle"
                        android:textStyle="bold"
                        android:layout_marginBottom="8dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/Network_sim_message2"
                        android:textColor="@color/details"
                        android:textSize="?attr/textSizeDetails"
                        android:gravity="center"
                        android:lineSpacingExtra="2dp"
                        android:layout_marginBottom="12dp"/>

                </LinearLayout>


                </LinearLayout>
            </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="16dp"
            app:cardElevation="6dp"
            android:layout_marginBottom="12dp"
            android:background="?attr/appBackground">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?attr/cards"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    android:text="@string/Network_wifi_h1"
                    android:textColor="@color/Heading_blue"
                    android:textSize="?attr/textSizeHeadings"
                    android:textStyle="bold" />

                <LinearLayout
                    android:id="@+id/linearLayoutWifi"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp"
                    android:background="?attr/cards">

                    <!-- Header: Wi-Fi Name and Icon -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <ImageView
                            android:id="@+id/imgWifiIcon"
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:src="@drawable/wifi"
                            app:tint="@color/neon_orange"
                            android:layout_marginEnd="12dp" />

                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <TextView
                                android:id="@+id/tvWifiSSID"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Unknown Network"
                                android:textColor="@color/Dashboard_text"
                                android:textSize="?attr/textSizeTitle"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/tvWifiIP"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="IP: 0.0.0.0"
                                android:textColor="@color/details"
                                android:textSize="?attr/textSizeDetails"
                                android:layout_marginTop="2dp" />
                        </LinearLayout>
                    </LinearLayout>

                    <!-- Divider -->
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        android:background="#22FFFFFF" />

                    <!-- Title + Description -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/Network_wifi_h2"
                        android:textColor="@color/Heading_blue"
                        android:textSize="?attr/textSizeTitle"
                        android:textStyle="bold"
                        android:layout_marginBottom="10dp" />



                    <!-- Progress + Speed -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <ProgressBar
                            android:id="@+id/progressWifiSpeed"
                            style="?android:attr/progressBarStyleHorizontal"
                            android:layout_width="0dp"
                            android:layout_height="12dp"
                            android:layout_weight="1"
                            android:progress="50"
                            android:max="100"
                            android:layout_marginEnd="10dp"
                            android:progressDrawable="@drawable/progress_horizontal_rounded" />

                        <TextView
                            android:id="@+id/tvWifiSpeed"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="72 Mbps"
                            android:textColor="@color/Dashboard_text"
                            android:textSize="?attr/textSizeDetails"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <!-- Frequency & Security Chips -->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tvWifiFrequency"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="8dp"
                            android:background="@drawable/bg_chip"
                            android:paddingStart="10dp"
                            android:paddingTop="4dp"
                            android:paddingEnd="10dp"
                            android:paddingBottom="4dp"
                            android:text="2.4 GHz"
                            android:textColor="@color/Dashboard_text"
                            android:textSize="?attr/textSizeDetails" />

                        <TextView
                            android:id="@+id/tvWifiSecurity"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/bg_chip"
                            android:paddingStart="10dp"
                            android:paddingTop="4dp"
                            android:paddingEnd="10dp"
                            android:paddingBottom="4dp"
                            android:text="WPA2"
                            android:textColor="@color/Dashboard_text"
                            android:textSize="?attr/textSizeDetails" />
                    </LinearLayout>
                </LinearLayout>


                <LinearLayout
                    android:id="@+id/linearLayoutNoWifi"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="?attr/cards"
                    android:gravity="center_horizontal"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <!-- Wi-Fi Icon -->
                    <ImageView
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_marginBottom="12dp"
                        android:src="@drawable/no_wifi" />

                    <!-- Title -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:text="@string/Network_wifi_h3"
                        android:textColor="@color/Dashboard_text"
                        android:textSize="?attr/textSizeTitle"
                        android:textStyle="bold" />

                    <!-- Description -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:lineSpacingExtra="2dp"
                        android:text="@string/Network_wifi_h4"
                        android:textColor="@color/Network_sim"
                        android:textSize="?attr/textSizeDetails" />

                </LinearLayout>


            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cardMobileData"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="12dp"
            app:cardCornerRadius="20dp"
            app:cardElevation="6dp"
            android:background="?attr/appBackground">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="12dp"
                android:background="?attr/cards">

                <!-- Card Title -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/Network_hotspot_h1"
                    android:textSize="?attr/textSizeHeadings"
                    android:textStyle="bold"
                    android:textColor="@color/Heading_blue"
                    android:layout_marginBottom="12dp"/>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?attr/cards">

                <!-- Mobile Data Status -->
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="8dp"
                    >

                    <ImageView
                        android:id="@+id/mobileDataIcon"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/mobile_data"
                        app:tint="@color/Network_not_connect"/>

                    <TextView
                        android:id="@+id/tvMobileDataStatus"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Mobile Data: ON"
                        android:textColor="@color/Dashboard_text"
                        android:textSize="?attr/textSizeTitle"
                        android:textStyle="bold"
                        android:layout_marginStart="12dp"/>
                </LinearLayout>

                <!-- Operator Name -->
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="8dp">

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/sim_card"
                        app:tint="@color/Network_connect3"/>

                    <TextView
                        android:id="@+id/tvOperatorName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Operator: Jazz"
                        android:textColor="@color/Dashboard_text"
                        android:textSize="?attr/textSizeTitle"
                        android:textStyle="bold"
                        android:layout_marginStart="12dp"/>
                </LinearLayout>

                <!-- Hotspot Status -->
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical">

                    <ImageView
                        android:id="@+id/hotspotIcon"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/hotspot"
                        app:tint="@color/Network_not_connect"/>

                    <TextView
                        android:id="@+id/tvHotspotStatus"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Hotspot: Restricted"
                        android:textColor="@color/Dashboard_text"
                        android:textSize="?attr/textSizeTitle"
                        android:textStyle="bold"
                        android:layout_marginStart="12dp"/>
                </LinearLayout>

            </LinearLayout>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="12dp"
            app:cardCornerRadius="20dp"
            app:cardElevation="6dp"
            android:background="?attr/appBackground">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp"
                android:background="?attr/cards">

                <!-- Card Title -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/Network_device_h1"
                    android:textColor="@color/Heading_blue"
                    android:textSize="?attr/textSizeHeadings"
                    android:textStyle="bold"
                    android:layout_marginBottom="12dp"/>

                <!-- Bluetooth & NFC -->
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="?attr/cards">

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="6dp">

                        <ImageView
                            android:id="@+id/imgBluetooth"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:src="@drawable/bluetooth"
                            app:tint="@color/blue"/>

                        <TextView
                            android:id="@+id/tvBluetoothStatus"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Bluetooth: ON "
                            android:textColor="@color/Dashboard_text"
                            android:layout_marginStart="8dp"
                            android:textSize="?attr/textSizeTitle"/>
                    </LinearLayout>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical">

                        <ImageView
                            android:id="@+id/imgNFC"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:src="@drawable/nfc"
                            app:tint="@color/neon_green"/>

                        <TextView
                            android:id="@+id/tvNFCStatus"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="NFC: Supported"
                            android:textColor="@color/Dashboard_text"
                            android:layout_marginStart="8dp"
                            android:textSize="?attr/textSizeTitle"/>
                    </LinearLayout>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#444"
                    android:layout_marginVertical="12dp"/>

                <!-- Network Utilities -->
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="12dp"
                    android:background="?attr/cards">

                    <TextView
                        android:id="@+id/tvPing"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Ping: 0 ms (to 0.0.0.0)"
                        android:textColor="@color/Dashboard_text"
                        android:textSize="?attr/textSizeDetails"
                        android:layout_marginBottom="6dp"/>

                    <TextView
                        android:id="@+id/tvPublicIP"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Public IP: 39.xx.xx.xx"
                        android:textColor="@color/Dashboard_text"
                        android:textSize="?attr/textSizeDetails"
                        android:layout_marginBottom="6dp"/>

                    <TextView
                        android:id="@+id/tvDNS"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="DNS: 0.0.0.0"
                        android:textColor="@color/Dashboard_text"
                        android:textSize="?attr/textSizeDetails"/>
                </LinearLayout>

            </LinearLayout>
        </androidx.cardview.widget.CardView>


    </LinearLayout>
</ScrollView>
</layout>
